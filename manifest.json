{
    "manifest_version": 2,
    "name": "Feedly Pooqer",
    "version": "0.2.1",

    "description": "Notifier of unread articles for Feedly RSS Reader",
    "icons": {
        "16": "/img/16.png",
        "48": "/img/48.png",
        "128": "/img/128.png"
    },
    "default_locale": "en",

    "browser_action": {
        "default_icon": "/img/48g.png",
        "default_title": "Feedly Pooqer"
    },
    "permissions": [
        "tabs",
        "alarms",
        "webRequest",
        "http://cloud.feedly.com/*"
    ],
    "background": {
        "scripts": ["/js/background.min.js"],
        "persistent": true
    }
}