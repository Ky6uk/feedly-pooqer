{
    "manifest_version": 2,
    "name": "Feedly Pooqer",
    "version": "0.4.1",

    "description": "__MSG_description__",
    "icons": {
        "16": "/img/16.png",
        "48": "/img/48.png",
        "128": "/img/128.png"
    },
    "default_locale": "en",

    "browser_action": {
        "default_icon": "/img/ba_36g.png",
        "default_title": "Feedly Pooqer"
    },
    "permissions": [
        "tabs",
        "alarms",
        "webRequest",
        "http://cloud.feedly.com/*"
    ],
    "background": {
        "scripts": ["/js/background.min.js"],
        "persistent": true
    },
    "minimum_chrome_version": "22",
    "options_page": "options.html"
}